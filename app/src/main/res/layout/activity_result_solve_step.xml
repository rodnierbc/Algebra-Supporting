<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">


    <FrameLayout
        android:id="@+id/solveResultFragmentsContentFrameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/solveResultControlsFrameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/solveResultControlsFrameLayout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/solveResultShowStepsButton"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Show Steps"
            android:textColor="@android:color/background_light"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="447dp" />

        <Button
            android:id="@+id/solveResultSaveButton"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Save"
            android:textColor="@color/colorPrimaryText"
            tools:layout_editor_absoluteX="209dp"
            tools:layout_editor_absoluteY="447dp" />

        <Button
            android:id="@+id/solveResultSendButton"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Send"
            android:textColor="@color/colorPrimaryText"
            tools:layout_editor_absoluteX="209dp"
            tools:layout_editor_absoluteY="447dp" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>